meta {
  name: Test Temp User Access to Protected Endpoint
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/admin/posts
  body: none
  auth: bearer
}

auth:bearer {
  token: {{tempUserToken}}
}

tests {
  test("should return 401 for temp password user accessing protected endpoints", function() {
    expect(res.getStatus()).to.equal(401);
  });
  
  test("should return password change required message", function() {
    expect(res.getBody()).to.have.property('message');
    expect(res.getBody().message).to.include('Password change required');
  });
}
