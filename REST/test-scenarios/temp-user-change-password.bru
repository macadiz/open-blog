meta {
  name: Test Temp User Can Change Password
  type: http
  seq: 4
}

patch {
  url: {{baseUrl}}/users/me/change-password
  body: json
  auth: bearer
}

auth:bearer {
  token: {{tempUserToken}}
}

body:json {
  {
    "currentPassword": "tempuser",
    "newPassword": "NewSecurePassword123!",
    "confirmPassword": "NewSecurePassword123!"
  }
}

tests {
  test("should allow temp user to change password", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("should return success message", function() {
    expect(res.getBody()).to.have.property('message', 'Password changed successfully');
  });
}
