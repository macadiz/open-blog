# Open Blog Monolith Configuration
# Copy this file to .env.monolith and customize

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
COMPOSE_PROJECT_NAME=open-blog

# ===========================================
# APPLICATION PORT
# ===========================================
PORT=80

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=open_blog
POSTGRES_USER=blog_user
POSTGRES_PASSWORD=secure_blog_password_change_this

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your_super_secret_jwt_key_please_change_this_in_production

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
