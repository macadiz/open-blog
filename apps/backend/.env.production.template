# Production Environment Configuration Template
# Copy this to .env.production and fill in your production values

# Database - Use your production database URL
DATABASE_URL="postgresql://username:password@your-db-host:5432/open_blog?schema=public"

# JWT Configuration - IMPORTANT: Use a strong, unique secret in production
JWT_SECRET="your-super-secure-production-jwt-secret-change-this"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="production"
PORT=3001

# CORS Configuration (Production)
# IMPORTANT: Replace with your actual domain(s)
# Example: "https://yourblog.com,https://www.yourblog.com"
CORS_ORIGINS="https://yourdomain.com"
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Additional Production Settings (optional)
# SSL and Security
# FORCE_HTTPS=true
# TRUST_PROXY=true
