# Development Environment Configuration
# This file should be used for local development
# Copy this to .env.development.local for your local overrides

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5434/open_blog?schema=public"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-key-not-for-production"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=3001

# CORS Configuration (Development)
# Allow common development ports
CORS_ORIGINS="http://localhost:4200,http://localhost:3000,http://127.0.0.1:4200,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600
