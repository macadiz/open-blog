# Open Blog Configuration
# Copy this file to .env and customize the values for your setup

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
COMPOSE_PROJECT_NAME=open-blog

# ===========================================
# NETWORK & PORT CONFIGURATION
# ===========================================
# Frontend (Web Server)
FRONTEND_PORT=80

# Backend API
BACKEND_PORT=3000

# Database (PostgreSQL)
POSTGRES_PORT=5432

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_DB=open_blog
POSTGRES_USER=blog_user
POSTGRES_PASSWORD=secure_blog_password_change_this

# Set to 'true' if you want to access the database directly from outside Docker
# WARNING: Only enable this for development or if you need direct database access
# EXPOSE_DATABASE=false

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret - IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your_super_secret_jwt_key_please_change_this_in_production_to_something_very_secure_and_random

# JWT Token expiration time (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment mode (production, development)
NODE_ENV=production

# CORS Origin - Update this to your domain in production
CORS_ORIGIN=http://localhost

# File Upload Settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./static

# ===========================================
# RESOURCE LIMITS (Optional - Docker Compose)
# ===========================================
# Uncomment and adjust if you want to limit resource usage
# POSTGRES_MEMORY_LIMIT=512m
# BACKEND_MEMORY_LIMIT=1g
# FRONTEND_MEMORY_LIMIT=256m
